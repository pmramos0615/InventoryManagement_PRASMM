@model InventoryManagement_PRASMM.Models.Suppliers

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Supplier</h4>
            <h6>@ViewBag.Caption</h6>
        </div>
    </div>
    <!-- /add -->
    <div class="card">
        @using (Html.BeginForm("Save", "Suppliers", FormMethod.Post))
        {
            if (Model != null && Model.ID > 0)
            {
                @Html.HiddenFor(a => a.ID)
            }

            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @required = "true" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Address 1</label>
                            @Html.TextBoxFor(a => a.Address1, new { @class = "form-control", @required = "true" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Address 2</label>
                            @Html.TextBoxFor(a => a.Address2, new { @class = "form-control", @required = "true" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Payment Terms</label>
                            @Html.DropDownListFor(a => a.TermID, new SelectList(ViewBag.PaymentTerms, "ID", "Name"), "Select Payment Terms", new { @class = "form-control select", @required = "true", @style = "width:100%" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Contact No</label>
                            @Html.TextBoxFor(a => a.ContactNo, new { @class = "form-control", @required = "true" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Contact Person</label>
                            @Html.TextBoxFor(a => a.ContactPerson, new { @class = "form-control", @required = "true" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Email No</label>
                            @Html.TextBoxFor(a => a.EmailAddress, new { @class = "form-control", @required = "true",@type="email" })
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <button class="btn btn-submit me-2" type="submit">Save changes</button>
                        @if (Model.ID > 0)
                        {
                            <a href="#" class="btn btn-danger" id="btnDelete">Delete</a>
                            @Html.Hidden("RedirectTo", Url.Action("Index", "Suppliers"))
                            ;
                        }
                        <a href="@Url.Action("Index", "Suppliers")" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            </div>
        }

    </div>
    @section scripts{
        <script src="~/js/pages/suppliers.js"></script>
    }
