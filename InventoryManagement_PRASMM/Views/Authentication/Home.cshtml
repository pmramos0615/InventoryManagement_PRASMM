@model InventoryManagement_PRASMM.Models.Users

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_EmptyPage.cshtml";
}

<!-- Link to the uploaded Bootstrap CSS file -->
<link rel="stylesheet" href="~/css/bootstrap.css" />

<div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center bg-navyBlueInLogoP bg-gradient">
    <div class="card p-4 shadow-lg" style="width: 350px; background: rgba(255, 255, 255, 0.7);">
        <div class="card-body">
            <div class="mb-3 text-center">
                <a href="javascript:void(0);" class="logo logo-normal">
                    <img src="~/img/logo.png" alt="Logo" class="img-fluid" style="max-width: 150px;">
                </a>
            </div>

            @using (Html.BeginForm("Login", "Authentication", FormMethod.Post, new { @id = "Form-login" }))
            {
                <div class="mb-3">
                    @Html.LabelFor(a => a.UserName, new { @class = "form-label text-dark" })
                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control", @placeholder = "Enter username", @pattern = "[a-zA-Z0-9]*", @data_custom_message = "Special characters are not allowed", @title = "Username" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(a => a.Password, new { @class = "form-label text-dark" })
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control", @placeholder = "Enter password", @pattern = "[a-zA-Z0-9]*", @data_custom_message = "Special characters are not allowed", @title = "Password" })
                </div>
                if (ViewBag.NotExist != "" || ViewBag.NotExist != null)
                {
                    <div class="notification-title text-danger">
                        <h6>@ViewBag.NotExist</h6>
                    </div>
                }

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a asp-controller="Account" asp-action="ForgotPassword" class="text-primary text-decoration-none">Forgotten?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100">Log In</button>
            }
            <p class="text-center mt-3">Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary">Sign Up</a></p>
        </div>
    </div>
</div>

@section Scripts {
	<script src="~/js/pages/authentication.js"></script>
}