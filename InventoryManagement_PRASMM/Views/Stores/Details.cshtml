@model InventoryManagement_PRASMM.Models.Stores

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Store Details</h4>
            <h6>@ViewBag.Caption</h6>
        </div>
    </div>
    <!-- /add -->
    <div class="card">
        @using (Html.BeginForm("Save", "Stores", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            if (Model != null && Model.ID > 0)
            {
                @Html.HiddenFor(a => a.ID)
            }
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @required = "true" })
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextBoxFor(a => a.Address, new { @class = "form-control", @required = "true" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Store In Charge</label>
                            @Html.DropDownListFor(a => a.EmployeeID, new SelectList(ViewBag.Employees, "ID", "FullName"), "Select Store In Charge", new { @class = "form-control select", @required = "true", @style = "width:100%" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Contact No</label>
                            @Html.TextBoxFor(a => a.ContactNo, new { @class = "form-control", @required = "true" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Email No</label>
                            @Html.TextBoxFor(a => a.EmailAddress, new { @class = "form-control", @required = "true",@type="email" })
                        </div>
                    </div>
             
                    <div class="col-lg-12">
                        <button class="btn btn-submit me-2" type="submit">Save changes</button>
                        @if (Model.ID > 0)
                        {
                            <a href="#" class="btn btn-danger" id="btnDelete">Delete</a>
                            @Html.Hidden("RedirectTo", Url.Action("Index", "Stores"))
                            ;
                        }
                        <a href="@Url.Action("Index", "Stores")" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            </div>
        }

    </div>
    @section scripts{
        <script src="~/js/pages/stores.js"></script>
    }
