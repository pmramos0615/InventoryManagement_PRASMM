@model InventoryManagement_PRASMM.Models.Brands

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Brand Details</h4>
            <h6>@ViewBag.Caption</h6>
        </div>
    </div>
    <!-- /add -->
    <div class="card">
        @using (Html.BeginForm("Save", "Brand"))
        {
            if (Model != null && Model.ID > 0)
            {
                @Html.HiddenFor(a => a.ID)
            }
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Brand Name</label>
                            @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @required = "true" })
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Description</label>
                            @Html.TextAreaFor(a => a.Description, new { @class = "form-control", @required = "true" })
                        </div>
                    </div>
                   
                    <div class="col-lg-12">
                        <button class="btn btn-primary btn-w-m" type="submit" style="width:150px;">Save changes</button>
                        @if (Model.ID > 0)
                        {
                            <button type="button" class="btn btn-danger btn-w-m" id="btnDelete" style="width:150px;">Delete</button>
                            @Html.Hidden("RedirectTo", Url.Action("Index", "Brand"))
                        }
                        <a href="@Url.Action("Index", "Brand")" class="btn btn-dark" style="width:150px;">Cancel</a>
                    </div>
                </div>
            </div>
        }

    </div>
    @section scripts{
        <script src="~/js/pages/brand.js"></script>
    }
